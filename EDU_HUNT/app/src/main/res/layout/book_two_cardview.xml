<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/pinky_radius"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/user2"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/liear"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/name"
            android:fontFamily="@font/avian_bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arun Sengupta"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:fontFamily="@font/avian_bold"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="(MA,Bed,Phd)"
            android:id="@+id/text"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/exper"
            android:fontFamily="@font/avian_bold"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="Experienced as a Tutor"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/subject"
            android:fontFamily="@font/avian_bold"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="Subject : Mathematics"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/distance"
            android:fontFamily="@font/avian_bold"
            android:textSize="10sp"
            android:textColor="@color/redy"
            android:text="Distance"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:fontFamily="@font/avian_bold"
        android:layout_margin="15dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_main"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK NOW"
        android:layout_below="@id/liear"
        tools:ignore="SmallSp" />

</RelativeLayout>
