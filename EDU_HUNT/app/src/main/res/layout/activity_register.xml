<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Register">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/orange_btm_radius"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/back"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/back_arrow" />
            </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/user"
        android:layout_below="@id/linear"
        android:layout_marginTop="-75dp"
        android:layout_centerHorizontal="true"
        />

            <LinearLayout
                android:layout_marginTop="60dp"
                android:layout_below="@id/linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <EditText
                    android:inputType="text"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_radiuos_10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:padding="12dp"
                    android:hint="Full Name"
                    />

                <EditText
                    android:inputType="textEmailAddress"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_radiuos_10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:padding="12dp"
                    android:hint="Email"
                    />
                <EditText
                    android:inputType="number"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_radiuos_10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:padding="12dp"
                    android:hint="Phone no"
                    />
                <EditText
                    android:gravity="start"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/button_radiuos_10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:padding="12dp"
                    android:hint="Address"
                    />
                <EditText
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_radiuos_10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:padding="12dp"
                    android:hint="Password"
                    />
                <EditText
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_radiuos_10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:padding="12dp"
                    android:hint="Confirm Password"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <CheckBox
                        android:id="@+id/forget2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp" />
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="7dp"
                        android:id="@+id/froget1"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@id/forget2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I read and agree To " />

                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/color_main"
                        android:layout_toRightOf="@id/froget1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms &amp; Condition" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/submit"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/white"
                        android:layout_below="@id/forget2"
                        android:layout_marginRight="20dp"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_radius_balck"
                        android:text="SUBMIT"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@id/forget2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already Have an Account? " />

                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/color_main"
                        android:layout_toRightOf="@id/froget1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" SIGN IN" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>