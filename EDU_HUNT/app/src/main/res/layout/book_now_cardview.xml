<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/pinky_radius">
    <TextView
        android:id="@+id/side"
        android:layout_width="10dp"
        android:layout_height="110dp"
        android:background="@drawable/left_black_side"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerVertical="true"
        android:id="@+id/icon"
        android:layout_toRightOf="@id/side"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/user2"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_toLeftOf="@id/button"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/name"
            android:fontFamily="@font/avian_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arun Sengupta"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:fontFamily="@font/avian_bold"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="(MA,Bed,Phd)"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/exper"
            android:fontFamily="@font/avian_bold"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="Experienced as a Tutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/subject"
            android:fontFamily="@font/avian_bold"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="Subject : Mathematics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/button"
        android:fontFamily="@font/avian_bold"
        android:layout_marginRight="10dp"
        android:textSize="10sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_main"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_radius_balck"
        android:text="BOOK NOW"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        tools:ignore="SmallSp" />

</RelativeLayout>
