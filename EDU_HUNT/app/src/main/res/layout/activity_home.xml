<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_main"
        >

        <TextView
            android:onClick="back"
            android:id="@+id/back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/back_arrow"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:onClick="avy"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/menu_icon"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:id="@+id/liear"
            android:layout_below="@id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="20dp"
                android:layout_height="6dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:onClick="update"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/iv_header_img"
                android:src="@drawable/user2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/avian_bold"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_header_name"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginStart="15dp"
                    android:text="Name"
                    android:layout_marginLeft="15dp" />
                <TextView
                    android:fontFamily="@font/avian_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_adres_phone"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="15dp"
                    android:text="Kolkata"
                    android:layout_marginLeft="15dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@id/liear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/top_radius"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                />

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="6dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.smarteist.autoimageslider.SliderLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/imageSlider"/>

            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:onClick="Listing"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/orange_radius"
                >
                <TextView
                    android:id="@+id/side"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/left_black_side"
                    android:textStyle="italic"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/icon"
                    android:layout_toRightOf="@id/side"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/teacher"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:fontFamily="@font/avian_bold"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:text="FIND TEACHER NEAR ME"
                    android:layout_centerVertical="true"
                    android:id="@+id/text"
                    android:layout_toRightOf="@id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/submit"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="12dp"
                    android:layout_centerVertical="true"
                    android:layout_height="12dp"
                    android:background="@drawable/forward_arrow"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

      <LinearLayout
          android:layout_marginTop="20dp"
      android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <LinearLayout
        android:background="@drawable/button_radiuos_10dp"
        android:layout_width="0dp"
        android:layout_weight="30"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <ImageView
          android:layout_marginTop="10dp"
          android:layout_gravity="center"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/iconone"
          />
      <TextView
          android:fontFamily="@font/avian_bold"
          android:textSize="12sp"
          android:textColor="@color/black"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="10dp"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="PAYMENT HISTORY"
          />
    </LinearLayout>
      <View
          android:layout_width="0dp"
          android:layout_height="2dp"
          android:layout_weight="8"
          />
    <LinearLayout
        android:background="@drawable/button_radiuos_10dp"
        android:layout_width="0dp"
        android:layout_weight="30"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <ImageView
          android:layout_marginTop="10dp"
          android:layout_gravity="center"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/icon2"
          />
      <TextView

          android:fontFamily="@font/avian_bold"
          android:textSize="12sp"
          android:textColor="@color/black"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="10dp"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="MY TEACHER"
          />
    </LinearLayout>
      </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/write_id"
                    android:background="@drawable/button_radiuos_10dp"
                    android:layout_width="0dp"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/icon3"
                        />
                    <TextView
                        android:fontFamily="@font/avian_bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FEES"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="8"
                    />
                <LinearLayout
                    android:id="@+id/read_id"
                    android:background="@drawable/button_radiuos_10dp"
                    android:layout_width="0dp"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/notification_icon"
                        />
                    <TextView
                        android:fontFamily="@font/avian_bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOTIFICATION"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>