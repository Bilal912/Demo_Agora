<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_margin="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/halka_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/side"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/left_orange_side"
            android:textStyle="italic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:fontFamily="@font/avian_bold"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="Bangali"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp">

            <TextView
                android:fontFamily="@font/avian_bold"
                android:textSize="16sp"
                android:textColor="@color/color_main"
                android:text="â‚¹ 399 /-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avian_bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="Per month"
                android:id="@+id/text"
                android:layout_toRightOf="@id/side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>