<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_margin="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/halka_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/side"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/left_orange_side"
            android:textStyle="italic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/namey"
            android:fontFamily="@font/avian_bold"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="Bangali"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/namey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp">

            <TextView
                android:gravity="right"
                android:id="@+id/price_id"
                android:fontFamily="@font/avian_bold"
                android:textSize="14sp"
                android:textColor="@color/color_main"
                android:text="â‚¹ 0 /-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />
            <TextView
                android:visibility="gone"
                android:gravity="right"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avian_bold"
                android:textSize="12sp"
                android:textColor="@color/greeny"
                android:text="PAID"
                android:id="@+id/paid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />
            <com.skydoves.elasticviews.ElasticButton
                android:visibility="gone"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                app:button_duration="250"
                app:button_scale="0.87"
                android:id="@+id/paynow"
                android:fontFamily="@font/avian_bold"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_main"
                android:gravity="center"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_radius_balck"
                android:text="PAY NOW"
                android:layout_alignParentEnd="true"
                />


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>